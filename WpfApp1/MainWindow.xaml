<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontSize="15px" Background="Black" >
    <Grid Margin="5px">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer x:Name="scroller">
            <TextBlock x:Name="main" Grid.Row="0" Background="Black" FontFamily="Courier New" Padding="0" TextWrapping="WrapWithOverflow"></TextBlock>
        </ScrollViewer>

        <TextBlock x:Name="input" Background="Black" FontFamily="Courier New" Foreground="White" KeyDown="KeyHandler" TextWrapping="Wrap">
            <TextBlock Foreground="White">></TextBlock>
            <TextBlock Foreground="White"></TextBlock>
        </TextBlock>
            
    </Grid>
</Window>
